<div class="chat">
  <div class="contents">
    <div class="content-top">
      <div class="chat-name">
        <!-- 投稿したユーザー名情報を出力する -->
        <%= message.user.name %>
      </div>
      <div class="data-and-time">
        <!-- 投稿した時刻を出力する -->
        <%= message.created_at %>
      </div>
    </div>
    <div class="content-bottom">
      <div class="chat-message">
        <!-- 投稿したメッセージ内容を記述する -->
        <%= message.content %>
      </div>
    </div>
  </div>
</div>