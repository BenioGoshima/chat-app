<div class="header">
  <div class="room-headre">
    <div class="room-header-name">hogehuga</div>
  </div>
  <div class="chat-end">
    <div class="chat-end-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="chat">
  <%= render partial: 'message', collection: @messages %>
</div>

<%= form_with model: [@room, @message], class: 'message', local: true do |f| %>
  <div class="form">
    <%= f.text_field :content, class: 'message-form', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>