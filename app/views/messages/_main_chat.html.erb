<div class="header">
  <div class="room-headre">
    <div class="room-header-name">hogehuga</div>
  </div>
  <div class="chat-end">
    <div class="chat-end-btn">
      <a href="#">チャットを終了する</a>
    </div>
  </div>
</div>
<div class="chat">
  <div class="contents">
    <div class="content-top">
    <div class="chat-name">Tom</div>
    <div class="data-and-time">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="content-bottom">
      <div class="chat-message">おはよう</div>
    </div>
  </div>
  <div class="contents">
    <div class="content-top">
    <div class="chat-name">Sim</div>
    <div class="data-and-time">2020/3/31(Wed) 12:43:30</div>
    </div>
    <div class="content-bottom">
      <div class="chat-message">こんばんは</div>
    </div>
  </div>
</div>

<%= form_with model: [@room, @message], class: 'message', local: true do |f| %>
  <div class="form">
    <%= f.text_field :content, class: 'message-form', placeholder: 'type a message' %>
    <label class="form-image">
      <span class="image-file">画像</span>
      <%= f.file_field :image, class: 'hidden' %>
    </label>
  </div>
  <%= f.submit '送信', class: 'send' %>
<% end %>